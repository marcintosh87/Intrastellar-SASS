<p id="notice"><%= notice %></p>

<h1>News Posts</h1>

<table>
  <thead>
    <tr>
      <th>Date created</th>
      <th>Title</th>
      <th>Content</th>
      <th>Division target</th>
      <th>Avatar</th>
      <th>Claps</th>
      <th>Clicks</th>
      <th>User</th>
      <th>Division</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news_posts.each do |news_post| %>
      <tr>
        <td><%= news_post.date_created %></td>
        <td><%= news_post.title %></td>
        <td><%= news_post.content %></td>
        <td><%= news_post.division_target %></td>
        <td><%= news_post.avatar %></td>
        <td><%= news_post.claps %></td>
        <td><%= news_post.clicks %></td>
        <td><%= news_post.user_id %></td>
        <td><%= news_post.division_id %></td>
        <td><%= link_to 'Show', news_post %></td>
        <td><%= link_to 'Edit', edit_news_post_path(news_post) %></td>
        <td><%= link_to 'Destroy', news_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News Post', new_news_post_path %>
